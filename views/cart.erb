<h4>Your cart:</h4>
<table class="table table-striped">
<thead>
<tr>
		<th>â„–</th>
		<th>Title of pizza</th>
		<th>Price</th>
		<th>Qty</th>
		<th>Total</th>
	</tr>
</thead>
<tbody>
  		<% @i=0 %>
  		<% @qty = 0 %>
  		<% @total_sum = 0 %>
  		<% @res = '' %>
 <% @orders.each do |key, value| %>
 	<tr>
 	<% @i+=1 %>
 	<% @qty=@qty+value %>
	<% @products.each do |p| %>
		<% if p.id == key %>
		<td><%= @i %></td>
		<td><%= p.title  %></td>
		<td><%= p.price %></td>
		<td><%= value %></td>
		<% @sum = p.price*value %>
		<td><%= p.price*value %></td>
		<% @total_sum += @sum.to_i %>
		<% @res +=p.title+value.to_s %>
		<% end %>
	<% end %>
  <% end %>
  </tr>
  <tr>
  	<td></td>
  	<td></td>
  	<td>Total:</td>
  	<td><%= @qty %></td>
  	<td><%= @total_sum %></td>


  </tbody>

</table>
